<SwapChainBackgroundPanel
    x:Class="MetroRetro.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Arrows buttons -->
    <Grid
        x:Name="ArrowsContainer"
        Height="200"
        Width="300"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0,0,50,50">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            x:Name="UpArrowButton"
            Content="↑"
            Grid.Column="1"
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="Black"
            Foreground="Black"
            FontSize="32"
            FontWeight="Bold" PointerPressed="UpArrowButton_PointerPressed" PointerReleased="UpArrowButton_PointerReleased" />
        <Button
            x:Name="DownArrowButton"
            Content="↓"
            Grid.Column="1"
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="Black"
            Foreground="Black"
            FontSize="32"
            FontWeight="Bold" />
        <Button
            x:Name="LeftArrowButton"
            Content="←"
            Grid.Column="0"
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="Black"
            Foreground="Black"
            FontSize="32"
            FontWeight="Bold" PointerPressed="LeftArrowButton_PointerPressed" PointerReleased="LeftArrowButton_PointerReleased" />
        <Button
            x:Name="RightArrowButton"
            Content="→"
            Grid.Column="2"
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="Black"
            Foreground="Black"
            FontSize="32"
            FontWeight="Bold" PointerPressed="RightArrowButton_PointerPressed" PointerReleased="RightArrowButton_PointerReleased" />
    </Grid>

    <!-- Space button -->
    <Grid
        x:Name="SpaceContainer"
        Height="100"
        Width="500"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Margin="0,0,300,50">
        <Border
            x:Name="SpaceButton"
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="Black"
            BorderThickness="2"
            Padding="0"
            PointerPressed="SpaceButton_PointerPressed"
            PointerReleased="SpaceButton_PointerReleased">
            <TextBlock
                Text="shoot"
                FontFamily="Segoe UI"
                FontSize="32"
                Foreground="Black"
                TextAlignment="Center"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" />
        </Border>
    </Grid>
    
    <!-- Points text -->
    <TextBlock
        x:Name="PointsText"
        Text="0000012515"
        Width="736"
        Height="90"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,50,50,0"
        TextWrapping="Wrap"
        FontFamily="Segoe UI"
        TextAlignment="Right"
        FontSize="64" />
    
    <!-- Debug text -->
    <TextBlock
        x:Name="DebugText"
        Text="ok"
        Width="700"
        Height="400"
        Margin="50,50,0,0"
        HorizontalAlignment="Left"
        TextWrapping="Wrap"
        VerticalAlignment="Top"
        FontSize="21.333" />

</SwapChainBackgroundPanel>
